<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <br><br><br>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation">

      <div class="mb-3">
        <label class="form-lable" for="title">Title</label>
        <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required/>
        <div class="valid-feedback">Title looks Good!</div>
      </div>


      <div class="mb-3">
        <label class="form-lable" for="description">Description</label>
        <textarea
        name="listing[description]"
        placeholder="enter description"
        class="form-control"
        required
        ></textarea>   
        <div class="invalid-feedback">Please enter a short description</div>   
     </div>
      
      <!-- <div class="mb-3">
        <label class="form-lable" for="image-filename">Image Filename</label>
        <input
        name="listing[image[filename]]"
        placeholder="enter image filename"
        type="text"
        class="form-control"
        required
        
      />
      </div> -->


      <div class="mb-3">
        <label class="form-lable" for="image-url">Image URL</label>

        <input
        name="listing[image[filename]]"
        placeholder="enter image filename"
        type="text"
        class="form-control"
        required
      />
      </div>
      
      <div class="row">
        <div class="mb-3 col-md-4">
          <label class="form-lable" for="price">Price</label>
         
          <input name="listing[price]" placeholder="1200"  class="form-control" required/>
  
          <div class="invalid-feedback">Price should be valid</div>
        </div>
        
        <div class="mb-3 col-md-8">
          <label class="form-lable" for="country">Country</label>
  
          <input name="listing[country]" placeholder="INDIA" type="text" class="form-control" required/>
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
      </div>
      
      <div class="mb-3">
        <label class="form-lable" for="location">Location</label>

        <input
        name="listing[location]"
        placeholder="Sibpur,Howrah"
        type="text"
        class="form-control"
        required
      />
        <div class="invalid-feedback">Location should be valid</div>
      </div>
      
      
      <button class="btn btn-dark add-btn mt-3">Add</button>
      <br><br><br>
    </form>
  </div>
  
</div>
    

