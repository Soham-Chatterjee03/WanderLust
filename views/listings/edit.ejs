<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <br><br><br>
        <h3>Edit your Listing</h3>
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
          <div class="mb-3">
            <label class="form-lable" for="title">Title</label>
            <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required/>
            <div class="valid-feedback">Title looks Good!</div>
          </div>


          <div class="mb-3">
            <label class="form-lable" for="description">Description</label>
            <textarea
            name="listing[description]"
            placeholder="enter description"
            class="form-control"
            required
            ><%= listing.description %></textarea>
            <div class="invalid-feedback">Please enter a short description</div>   
      
        </div>
          
          <!-- <div class="mb-3">
            <label class="form-lable" for="image-filename" required>Image Filename</label>
            <input
            name="listing[image[filename]]"
            value="<%= listing.image.filename %>"
            type="text"
            class="form-control"
          />
          </div> -->


          <div class="mb-3">
            <label class="form-lable" for="image-url">Image URL</label>

            <input
            name="listing[image[filename]]"
            value="<%= listing.image.url %>"
            type="text"
            class="form-control"
            required
            
          />
          <div class="invalid-feedback">Please enter a valid link</div>
          </div>
          
          <div class="row">
            <div class="mb-3 col-md-4">
              <label class="form-lable" for="price">Price</label>
            
              <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" required/>
      
              <div class="invalid-feedback">Please enter a valid price</div>
            </div>
            
            <div class="mb-3 col-md-8">
              <label class="form-lable" for="country">Country</label>
      
              <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required/>
              <div class="invalid-feedback">Country name should be valid</div>
            </div>
          </div>
          
          <div class="mb-3">
            <label class="form-lable" for="location">Location</label>

            <input
            name="listing[location]"
            value="<%= listing.location %>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location should be valid</div>
          </div>
          
          <br /><br />
          <button class="btn btn-dark edit-btn mt-3">Edit</button>
        </form>
  </div>
</div>

      
 